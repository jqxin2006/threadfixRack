<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" 
	name="pointInTimeGraph" pageWidth="675" pageHeight="580"
	whenNoDataType="NoDataSection" columnWidth="675" leftMargin="0" rightMargin="0" 
	topMargin="0" bottomMargin="0">
	<parameter name="appId" class="java.util.List" isForPrompting="false"/>
	<parameter name="appName" class="java.lang.String" isForPrompting="false"/>
	<parameter name="orgName" class="java.lang.String" isForPrompting="false"/>
	<queryString language="hql">
		<![CDATA[SELECT 
			application.name as name,
			count(vulnerability) as vulnCount,
			(SELECT count(vulnerability) from Vulnerability vulnerability where vulnerability.isFalsePositive = false and vulnerability.active = true and vulnerability.genericSeverity.intValue = 2 and vulnerability.application = application) as low,
			(SELECT count(vulnerability) from Vulnerability vulnerability where vulnerability.isFalsePositive = false and vulnerability.active = true and vulnerability.genericSeverity.intValue = 3 and vulnerability.application = application) as medium,
			(SELECT count(vulnerability) from Vulnerability vulnerability where vulnerability.isFalsePositive = false and vulnerability.active = true and vulnerability.genericSeverity.intValue = 4 and vulnerability.application = application) as high,
			(SELECT count(vulnerability) from Vulnerability vulnerability where vulnerability.isFalsePositive = false and vulnerability.active = true and vulnerability.genericSeverity.intValue = 5 and vulnerability.application = application) as critical
				 FROM Application application join application.vulnerabilities as vulnerability
				 where application.id in ($P{appId})
				 	AND application.active = true
				 	AND vulnerability.genericSeverity.intValue != 1
			GROUP BY application.name
			ORDER BY count(vulnerability) desc ]]>
	</queryString>
	<field name="name" class="java.lang.String"/>
	<field name="low" class="java.lang.Long"/>
	<field name="medium" class="java.lang.Long"/>
	<field name="high" class="java.lang.Long"/>
	<field name="critical" class="java.lang.Long"/>
	<pageHeader>
		<band height="80">
			<staticText>
				<reportElement x="0" y="0" width="675" height="40"/>
				<textElement textAlignment="Center" verticalAlignment="Middle">
					<font size="22" isBold="true"/>
				</textElement>
				<text><![CDATA[Top 20 Vulnerable Applications]]></text>
			</staticText>
			<textField>
				<reportElement x="0" y="40" width="675" height="20"/>
				<textElement textAlignment="Center" verticalAlignment="Middle">
					<font size="12" isBold="true"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA["Team: " + $P{orgName}]]></textFieldExpression>
			</textField>
			<textField>
				<reportElement x="0" y="60" width="675" height="20"/>
				<textElement textAlignment="Center" verticalAlignment="Middle">
					<font size="12" isBold="true"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA["Application: " + $P{appName}]]></textFieldExpression>
			</textField>
		</band>
	</pageHeader>
	<summary>
		<band height="500">
			<stackedBarChart>
			  <chart customizerClass="com.denimgroup.threadfix.service.report.CategoryIntegerTicksChartCustomizer" isShowLegend="true">
				  <reportElement x="0" y="0" width="675" height="500"/>
					<chartTitle/>
					<chartSubtitle/>
					<chartLegend/>
			  </chart>
			  <categoryDataset>
			  	<categorySeries>
			  		<seriesExpression><![CDATA["Low"]]></seriesExpression>
					<categoryExpression><![CDATA[$F{name}]]></categoryExpression>
					<valueExpression><![CDATA[$F{low}]]></valueExpression>
			  	</categorySeries>
			  	<categorySeries>
			  		<seriesExpression><![CDATA["Medium"]]></seriesExpression>
					<categoryExpression><![CDATA[$F{name}]]></categoryExpression>
					<valueExpression><![CDATA[$F{medium}]]></valueExpression>
			  	</categorySeries>
			  	<categorySeries>
			  		<seriesExpression><![CDATA["High"]]></seriesExpression>
					<categoryExpression><![CDATA[$F{name}]]></categoryExpression>
					<valueExpression><![CDATA[$F{high}]]></valueExpression>
			  	</categorySeries>
			  	<categorySeries>
			  		<seriesExpression><![CDATA["Critical"]]></seriesExpression>
					<categoryExpression><![CDATA[$F{name}]]></categoryExpression>
					<valueExpression><![CDATA[$F{critical}]]></valueExpression>
			  	</categorySeries>
			  </categoryDataset>
			  <barPlot>
			  	<plot orientation="Horizontal">
					<seriesColor seriesOrder="0" color="#004678"/>
					<seriesColor seriesOrder="1" color="#BDD84D"/>
					<seriesColor seriesOrder="2" color="#FDE05E"/>
					<seriesColor seriesOrder="3" color="#DB6D1D"/>
				</plot>
				<categoryAxisFormat>
					<axisFormat>
						<labelFont/>
						<tickLabelFont/>
					</axisFormat>
				</categoryAxisFormat>
				<valueAxisFormat>
					<axisFormat>
						<labelFont/>
						<tickLabelFont/>
					</axisFormat>
				</valueAxisFormat>
			  </barPlot>
			</stackedBarChart> 
		</band>
	</summary>
</jasperReport>
